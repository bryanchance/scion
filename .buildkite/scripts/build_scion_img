#!/bin/bash

set -e

# Anapaya needs a docker login
echo "Login to docker hub with user $DOCKERHUB_USER"
echo "$DOCKERHUB_PASSWORD" | docker login -u "$DOCKERHUB_USER" --password-stdin

BASE_IMG=${BASE_IMG:-708711d73775588338327db5e92a0df27b9f91c7db0cd190d8b4cfd45e998dd9}

docker pull anapaya/scion_base@sha256:$BASE_IMG
docker tag anapaya/scion_base@sha256:$BASE_IMG scion_base:latest
./docker.sh build
