            iprint(level, "Name = %s" % self.Name)

class OrganizationClass(ProdspecEntity):
    ID = None
    AS = []
    Site = []

    def print(self, level):
        iprint(level, "ID = %s" % self.ID)
        iprint(level, "AS = [")
        for ent in self.AS:
            iprint(level + 1, ent.ID)
        iprint(level, "]")
        iprint(level, "Site = [")
        for ent in self.Site:
            iprint(level + 1, ent.ID)
        iprint(level, "]")

